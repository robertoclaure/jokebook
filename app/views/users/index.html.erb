<h1>Users</h1>
<%= link_to "Back to jokes", jokes_path %>

<table class= "table content-table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user, :class => 'btn btn-primary btn-small' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-warning btn-small' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure you wish to delete this item?' }, :class => 'btn btn-danger btn-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, :class => 'btn btn-primary btn-large' %>
